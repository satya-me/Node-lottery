      align-items: center;
      gap: 10rem;
      margin-bottom: 2rem;
    }

    .header_filed h3 {
      font-size: 1rem;
      font-weight: bold;
    }

    .input_style {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      gap: 0.5rem;
