                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="header_filed">
                        <div class="heding_form">
                          <h3>Highlights</h3>
                        </div>

                        <button type="button" class="btn btn-success js-add--exam-row">
                          Add more <i class="fas fa-plus-circle"></i>
                        </button>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="form-multiple-list" id="form-multiple-list">
                        <div class="form-group d-flex">
                          <input type="text" name="highlights[]" class="form-control"
                            placeholder="Enter highlighted point" />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- /.card-body -->
              </div>
              <div class="card card-primary">
                <!-- form start -->
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="header_filed">
                        <div class="heding_form">
                          <h3>Specification</h3>
                        </div>

                        <button type="button" class="btn btn-success js-spcification--exam-row">
                          Add more <i class="fas fa-plus-circle"></i>
                        </button>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="form-multiple-list" id="specification">
                        <div class="form-group 2ndformgrp input_style">
                          <input type="text" name="spec_key[]" class="form-control" placeholder="Key" />
                          <input type="text" name="spec_value[]" class="form-control" placeholder="specification" />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- /.card-body -->
              </div>

              <!-- /.card -->
            </div>
            <div class="col-md-6">
              <!-- general form elements -->
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Media</h3>
                </div>

                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="form-group">
                        <label for="customFile">Main Image</label>
                        <div class="custom-file">
                          <input type="file" class="custom-file-input" required id="customFile" name="main_image" />
                          <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- /.card-body -->
              </div>
              <!-- /.card -->
              <div class="card card-primary">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="form-group">
                        <label for="customFile">Image List</label>
                        <div class="custom-file">
                          <input type="file" class="custom-file-input" id="customFile" name="list_image" multiple />
                          <label class="custom-file-label" for="customFile">Choose files</label>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
