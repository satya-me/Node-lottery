                  </div>
                  <div class="row">

                    <div class="col-sm-6">
                      <div class="form-group">
                        <label>Category</label>
                        <select class="form-control" name="category">
                          <% meta.category.forEach(function(item) { %>
                            <option value="<%= item.id %>">
                              <%= item.name %>
                            </option>
                            <% }); %>

                        </select>
                      </div>
                    </div>
                  </div>
                  <!--  -->
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="form-group">
                        <div class="custom-control custom-checkbox">
                          <input class="custom-control-input" type="checkbox" id="customCheckbox1" name="status" />
                          <label for="customCheckbox1" class="custom-control-label">Status</label>
                        </div>
                      </div>
                    </div>
                    <div class="col-sm-12">
                      <div class="form-group">
                        <div class="custom-control custom-checkbox">
                          <input class="custom-control-input trigger" type="checkbox" id="checkbox_one" name="is_banner"
                            data-trigger="hidden_fields_one" />
                          <label for="checkbox_one" class="custom-control-label">Banner</label>
                        </div>
                      </div>
                      <div id="hidden_fields_one" class="hidden">
                        <div class="custom-file">
                          <input type="file" class="custom-file-input" id="customFile" name="is_banner_image" />
